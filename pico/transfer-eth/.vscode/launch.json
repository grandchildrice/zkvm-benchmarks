  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'prover'",
      "cargo": {
        "args": ["build", "--bin=prover", "--package=prover"],
        "filter": {
          "name": "prover",
          "kind": "bin"
        }
      },
      "args": ["run", "--", "--once"],
      "cwd": "${workspaceFolder}/prover"
    }
  ]
}
